<input type="hidden" id="id" name="id" value="<%=(item ? item.id : 0) %>" />

<div class="row">
    <div class="col-sm-6">
		<div class="form-group">
			<label for="nome">Título</label>
			<input id="nome" name="nome" maxlength="100" class="form-control" type="text" spellcheck="false" value="<%=(item ? item.nome : '') %>" />
		</div>
	</div>

    <div class="col-sm-6">
        <div class="form-group mb-0">
            <label for="idperfil">Categoria</label>
            <select id="idperfil" name="idperfil" class="form-control" size="1">
                <option value="">Selecione...</option>
                <% for (let i = 0; i < etiqueta.length; i++) { %>
                <option value="<%= etiqueta[i].id %>" <%-((item && item.idperfil === etiqueta[i].id) ? 'selected="selected"' : '') %>><%= etiqueta[i].nome %></option>
                <% } %>
            </select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
		<div class="form-group">
			<label for="nome">Conteúdo</label>
            <textarea id="nome" name="nome" class="form-control" type="text" spellcheck="false" value="<%=(item ? item.nome : '') %>" ></textarea>
		</div>
	</div>

</div>

<div class="row">
    <div class="col-sm-12">
		<div class="form-group">
			<label for="nome">Descrição</label>
            <textarea id="nome" name="nome" class="form-control" type="text" spellcheck="false" value="<%=(item ? item.nome : '') %>" ></textarea>
		</div>
	</div>
</div>


<%- contentFor("scripts") %>
<script type="text/javascript">
	//<![CDATA[
	"use strict";

	$("#form").validate({
		rules: {
			email: {
				required: true
			},
			nome: {
				required: true
			},
			cpf: {
				required: true
			},
			telefone: {
				required: true
			},
			//<% if (!item) { %>
			senha: {
				required: true,
				minlength: 6
			},
			senha2: {
				equalTo: "#senha"
			},
			//<% } %>
			idperfil: {
				required: true
			}
		},

		submitHandler: function (form) {
			if (JsonWebApi.active)
				return;

			Swal.wait();

			//<% if (item) { %>

			JsonWebApi.postFormData("<%- root %>/api/usuario/editar", form, function (response) {
				if (response.success)
					Swal.success("Usuário alterado com sucesso! " + emoji.happy);
				else
					Swal.error(response.value + " " + emoji.sad);
			});

			//<% } else { %>

			JsonWebApi.postFormData("<%- root %>/api/usuario/criar", form, function (response) {
				if (response.success) {
					resetForm("#form");
					Swal.success("Testamento cadastrado com sucesso! " + emoji.happy);
				} else {
					Swal.error(response.value + " " + emoji.sad);
				}
			});

			//<% } %>
		}
	});
	//]]>
</script>
