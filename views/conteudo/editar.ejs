<input type="hidden" id="id" name="id" value="<%=(item ? item.id : 0) %>" />

<div class="form-group">
	<label for="nome">Nome</label>
	<input id="nome" name="nome" maxlength="100" class="form-control" type="text" spellcheck="false" value="<%=(item ? item.nome : '') %>" />
</div>

<div class="form-group">
	<label for="descricao">Nome</label>
	<textarea id="descricao" name="descricao" maxlength="1000000" rows="10" class="form-control"><%=(item ? item.descricao : '') %></textarea>
</div>

<% if (!item) { %>
<div class="form-group">
	<label for="arquivo">Arquivo</label>
	<input id="arquivo" name="arquivo" class="form-control" type="file" />
</div>
<% } %>

<%- contentFor("scripts") %>
<script type="text/javascript">
	//<![CDATA[
	"use strict";

	$("#form").validate({
		rules: {
			nome: {
				required: true,
				minlength: 3
			}
		},

		submitHandler: function (form) {
			if (JsonWebApi.active)
				return;

			Swal.wait();

			//<% if (item) { %>

			JsonWebApi.postFormData("<%- root %>/api/conteudo/editar", form, function (response) {
				if (response.success)
					Swal.success("Conteúdo alterado com sucesso! " + emoji.happy);
				else
					Swal.error(response.value + " " + emoji.sad);
			});

			//<% } else { %>

			JsonWebApi.postFormData("<%- root %>/api/conteudo/criar", new FormData(form), function (response) {
				if (response.success) {
					resetForm("#form");
					Swal.success("Conteúdo criado com sucesso! " + emoji.happy);
				} else {
					Swal.error(response.value + " " + emoji.sad);
				}
			});

			//<% } %>
		}
	});
	//]]>
</script>
